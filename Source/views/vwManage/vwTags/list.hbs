{{#section 'js'}}
<script>
    function delete_function(id) {
      var choice = confirm('Are you sure you delete tag with ID: ' + id);
         if (choice) {
             document.getElementById('myform'+id.toString()).submit();
          }
    }
</script>
{{/section}}

<main>
  <div class="container-fluid">
    <ol class="breadcrumb mb-4 mt-3">
      <li class="breadcrumb-item"><a href="/manage">Dashboard</a></li>
      <li class="breadcrumb-item"><a href="/manage/tags/list">Tags</a></li>
      <li class="breadcrumb-item active">List</li>
    </ol>
    <div class="card mb-4">
      <div class="card-header">
        <div class="row ">
          <h2>Tags <b>List </b></h2>
        </div>
         {{#if success}}
            <div class="alert alert-success" role="alert">
              {{success}}
            </div>
          {{/if}}
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Action</th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Action</th>
              </tr>
            </tfoot>
            <tbody>
              {{#each listTag}}
              <tr>
                <td>{{IDTag}}</td>
                <td ><p class="badge badge-info">{{TagName}}</p></td>
                <td>
                  <a href="/manage/tags/edit?id={{IDTag}}" class="text-warning"><i class="fas fa-edit"></i></a>
                  <a id="{{IDTag}}" class="text-danger" onclick="delete_function(this.id)"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
                <form id = "myform{{IDTag}}" action="/manage/tags/delete?id={{IDTag}}" method="POST"></form>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>
