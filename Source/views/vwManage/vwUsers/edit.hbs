
<main>
  <div class="container-fluid">
    <ol class="breadcrumb mb-4 mt-3">
      <li class="breadcrumb-item"><a href="/manage">Dashboard</a></li>
      <li class="breadcrumb-item"><a href="/manage/users/list">User</a></li>
      <li class="breadcrumb-item active">Add User</li>
    </ol>
    <div class="card mb-4">
      <div class="card-header">
        <div class="row ">
          <h2>User <b>Add</b></h2>
        </div>
      </div>
      <div class="card-body">
            <div class="container">
            <div class="row">
                <div class="col-sm-12">
                        <form action="/manage/users/edit" method="post"  name="form">
                        <div class="form-group">
                            <label>ID User</label>
                            <input type="text" name="IDUser" class="form-control text-dark"  value="{{user.IDUser}}" readonly>
                        </div>
                        <div class="form-group">
                            <label>Full name</label>
                            <input type="text" name="fullname" class="form-control text-dark"  value="{{user.FullName}}" required>
                        </div>
                         <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="email" class="form-control text-dark" value="{{user.Email}}" required>
                        </div>
                         <div class="form-group">
                            <label>Date of birth</label>
                            <input type="date" name="DOBirth" class="form-control text-dark" value="{{#format_date_pass user.DOB}}{{/format_date_pass}}" required>
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            <input type="text" name="phone" class="form-control text-dark"  value="{{user.Phone}}" required>
                             <div id="phone_error"></div>
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" name="address"class="form-control text-dark"   value="{{user.Address}}" required>
                        </div>
                        <div class="form-group ">
                            <label for="" class="big mb-1">Role</label>
                            <select id="typeofuser" style="border-radius: 5px;" name="typeofuser" class="ml-3  border-color: coral">
                            {{#each listTypeOfUser}}
                            <option value="{{IDType}}" {{#compare_id IDType ../user.TypeOfUser}}selected{{/compare_id}}>{{TypeName}}</option>
                            {{/each}}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-lg btn-success btn-block">
                            <i class="fa fa-check" aria-hidden="true"></i>
                            Update
                        </button>
                        </form>
                    </div>
                </div>
            <!--/col-9-->
            </div>
      </div>
    </div>
  </div>
</main>

