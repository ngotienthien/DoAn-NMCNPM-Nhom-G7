<script>
  $('.dropdown-header').on({
    mouseenter: function () {
      $(this).addClass("show");
      $('.dropdown-menu-header').addClass("show");
      $('.vizew-main-menu').css("z-index", "-1");
    },
  });
  $('.dropdown-menu-header').on('mouseleave', function () {
    $('.vizew-main-menu').css("z-index", "1");
    $('.dropdown-header').removeClass("show");
    $('.dropdown-menu-header').removeClass("show");
  })

  $(document).ready(function () {
    $(".abstract").each(function (i) {
      var len = $(this).text().trim().length;
      if (len > 100) {
        $(this).text($(this).text().substr(0, 100) + '...');
      }
    });
  });
  
</script>
