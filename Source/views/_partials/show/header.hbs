<!-- Top Header Area -->
<div class="row header">
        <div class="grid wide">
            <div class="row header--relative">
                <div class="col l-2">
                    <a href="/" class="header-logo">
                        <img src="../../assets/resources/favicons/android-chrome-96x96.png" alt="logo">
                        <span class="header-logo__name">VnTourism</span>
                    </a>
                </div>
                <div class="col l-8">
                    <ul class="header-nav">
                        <li class="header-nav__item"><a href="/category?id=1" class="header-nav__link">Tỉnh</a></li>
                        <li class="header-nav__item"><a href="" class="header-nav__link">Điểm đến <i class="fas fa-sort-down"></i></a>
                          <ul class="header-nav-sub">
                            {{#each lcSubCategories}}
                            <li class="header-nav-sub__item">
                              <a  class="header-nav-sub__item--link" 
                              href="/place?id={{IDSubCategory}}">
                              {{SubCategoryName}}
                              </a>
                            </li>
                            {{/each}}
                            {{!-- {{#each listCateSub}}
                            <li class="header-nav-sub__item">
                              <a  class="header-nav-sub__item--link" 
                              href="/place?id={{IDSubCategory}}">
                              {{SubCategoryName}}
                              </a>
                            </li>
                            {{/each}} --}}
                          </ul>
                        </li>
                        <li class="header-nav__item"><a href="/search-location" class="header-nav__link"><i class="fas fa-search-location"></i></a></li>
                    </ul>
                </div>

                <!-- Chưa đăng nhập -->
                {{#unless lcIsAuthenticated}}
                <div class="col l-2">
                    <div class="header-right">
                        <a href='/login?retURL={{curURL}}' class="btn btn-center-center btn-primary">Đăng nhập</a>
                    </div>
                </div>
                {{else}}
                <!-- Đã đăng nhập -->
                <div class="col l-2">
                    <div class="header-right">
                        <div class="account">
                            <input type="checkbox" id="account--checked" class="account--checked">
                            <label for="account--checked" class="overlay"></label>
                            <label for="account--checked" class="account__btn">
                                {{!--  --}}
                                <img src="./../../public/images/{{#if lcAuthUser.Avatar}}{{lcAuthUser.Avatar}}{{else}}avt-default.jpg{{/if}}" alt="button account"
                                width="48px" height="48px">
                            </label>
                            <ul class="account-box">
                                <li class="account-box__item">
                                    <a href="/updateProfile" for="account--checked">Thông tin cá nhân</a>
                                </li>
                                <li class="account-box__item">
                                  <form action="/logout" method="POST">
                                    <button style="width: 100%; padding: 5px 0px 5px 0px;" type="submit" >Đăng xuất</button>
                                  </form>

                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                {{/unless}}
            </div>
        </div>
    </div>
