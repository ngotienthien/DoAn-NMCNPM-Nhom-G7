
<!-- Top Header Area -->
<div class="top-header-area mb-3">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12 col-md-6">
        <!-- Breaking News Widget -->
        <div class="breaking-news-area d-flex align-items-center">
          <div class="news-title">
            <p>Breaking News:</p>
          </div>
          <div id="breakingNewsTicker" class="ticker">
            <ul>
              {{#each lcTop3View}}
              <li><a href="/articles/{{IDArticle}}">{{Title}}</a></li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-6">
        <div class="top-meta-data d-flex align-items-center justify-content-end">
          <!-- Top Search Area -->
          <div class="top-search-area">
            <form action="/search" method="GET">
              <input type="text" name="search" id="topSearch" placeholder="Search...">
              <button type="submit" class="btn"><i class="fa fa-search" aria-hidden="true"></i></button>
            </form>
          </div>
          <!-- Login -->
          <div class="dropdown dropdown-header">
            <a class="btn dropdown-toggle login-btn" type="button" id="dropdownMenuButton"
              data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              {{#unless lcIsAuthenticated}}
                <i class="fa fa-user" aria-hidden="true"></i>
              {{else}}
                <span>{{lcAuthUser.UserName}}</span>
              {{/unless}}
            </a>
            <div class="dropdown-menu dropdown-menu-header" aria-labelledby="dropdownMenuButton">
              {{#unless lcIsAuthenticated}}
              <a class="dropdown-item" href='/login?retURL={{curURL}}'><i class="fa fa-sign-in" aria-hidden="true"></i> Login</a>
              <a class="dropdown-item" href="/register"><i class="fa fa-user-plus" aria-hidden="true"></i> Register</a>
              <a class="dropdown-item" href="/forgotPassword"><i class="fa fa-user-plus" aria-hidden="true"></i>Forgot Password</a>
              {{else}}
              {{#if lcIsManager}}
                <a class="dropdown-item" href="/manage"><i class="fa fa-cog" aria-hidden="true"></i> Manage</a>
              {{/if}}
              <a class="dropdown-item" href="/updateProfile"><i class="fa fa-info" aria-hidden="true"></i> Profile</a>
              <a class="dropdown-item" href="/updateProfile?id=nav-password"><i class="fa fa-key" aria-hidden="true"></i> Change Password</a>
              <a class="dropdown-item" href="/checkPremium"><i class="fa fa-user-secret" aria-hidden="true"></i>Up to Premium</a>
              <form action="/logout" method="POST">
                <button type="submit" class="dropdown-item"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</button>
              </form>
              {{/unless}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Navbar Area -->
