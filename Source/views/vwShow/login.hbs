<div class="grid wide">
        <div class="row login">
            <div class="col l-6 login-bg"></div>
            <div class="col l-6 login-input">
                <div class="login-input__logo">
                    <a href="/" class="login-input__logo--link">
                        <img src="./../../assets/resources/favicons/android-chrome-144x144.png" alt="">
                    </a>
                </div>
                    {{#if lcIsAuthenticated}}
                    <div class="margin-left-24">
                        <h1 class="login-input__heading">Bạn đã đăng nhập rồi</h1>
                        <form action="/logout" method="POST">
                            <button  type="submit" >Đăng xuất</button>
                        </form>
  
                    </div>
                    {{else}}
                    <div class="margin-left-24">
                        <h1 class="login-input__heading">Đăng nhập</h1>
                        <p class="login-input__paragraph">Tham gia ngay cộng đồng du lịch Việt Nam để cùng nhau xây dựng và chia sẻ những thông tin bổ ích đến với mọi người!</p>
                    
                    </div>
                    <div class="login-input-with">
                        <a href="login-facebook" class="login-input-with__google">Đăng nhập với <i class="fab fa-facebook"></i></a>
                        <span class="login-input-with__tips">
                            Mẹo: Đăng nhập nhanh hơn với Facebook!
                        </span>
                    </div>
                    <hr class="login-input--solid">
                    <form class="form-group" method="post" name="form_login" onsubmit="return validateFormLogin()">
                        <input type="text" name="username" autofocus id="exampleInputEmail1" placeholder="Tên đăng nhập" class="form-group__input margin-t-b-8 btn-radius-20" required>
                        <input type="password" name="password" id="exampleInputPassword1" placeholder="Mật khẩu" class="form-group__input margin-t-b-8 btn-radius-20" required>
                        <div class="form-group__check margin-t-b-8">
                            <input type="checkbox" id="remember">
                            <label for="remember">Nhớ mật khẩu</label>
                        </div>
                         <span class="text-danger">{{notificationLogin}}</span>
                        <div class="login-input-btn margin-t-b-8">
                            <input type="submit" value="Đăng nhập" class="btn btn-left-center btn-primary btn-radius-20"
                            id="btn-submit">
                            <a href="./register" class="btn btn-right-center btn-white btn-radius-20">Đăng ký</a>
                        </div>
                        <a href="#" class="login-input-link__forgot margin-t-b-8">Quên mật khẩu</a>
                    </form>

                    {{/if}}
                </div>
            </div>
        </div>
    </div>

    <script src="./../../assets/resources/js/keyup-enter.js"></script>

    {{#section 'js'}}
        <script>
            function validateFormLogin(){
                var countError = 0;
                var UserName = document.forms["form_login"]["username"];
                var Password = document.forms["form_login"]["password"];

                var listClassError = document.getElementsByClassName("error");

                for(i = 0; i <listClassError.length; i++){
                    listClassError[i].remove();
                    i--;
                }

                if (UserName.value.length < 1) {
                    var spanUserName = document.createElement("span");
                    spanUserName.innerHTML = "This field is required";
                    spanUserName.className = "error text-danger";
                    UserName.after(spanUserName);
                    countError++;
                }
                if (Password.value.length < 1) {
                    var spanPassword = document.createElement("span");
                    spanPassword.innerHTML = "This field is required";
                    spanPassword.className = "error text-danger";
                    Password.after(spanPassword);
                    countError++;
                }
        
                if (countError >= 1)       
                    return false ;
                

                return true;
        }
        </script>
    {{/section}}
