<!-- Begin Scene -->
<div class="grid wide account">
  <div class="row">
      <div class="col l-12">
          <div class="option-heading">
              {{#each listCate}}
                <a href="/category?id={{IDCategory}}" 
                class="option-heading__button {{#if active}}option-heading__button--active{{/if}}">{{CategoryName}} <span {{#unless Number}}style="color:black"{{else}}style="color:red"{{/unless}}>({{Number}})</span></a>
              {{/each}}
          </div>    
      </div>
  </div>
  
  <div class="post">
            <div class="row">
                {{#if listArticle}}
                {{#each listArticle}}
                <div class="col l-3">
                    <a href="/details?id={{IDArticle}}" class="post-item post-item--small">
                        <div class="post-item__img">
                            <img 
                                src="../../public/images/{{#if Avatar}}{{Avatar}}{{else}}default.png{{/if}}" 
                                alt="Background">
                        </div>  
                        <div class="post-info">
                            <div class="">
                                <h3 class="post-info__heading">{{Title}}</h3>
                                <p class="post-info__paragraph">
                                {{Abstract}}   
                                </p>
                            </div>
                        </div>
                        <div class="post-info-avt">
                            <img src="../../assets/resources/img/user/{{#if avtWriter}}{{avtWriter}}{{else}}user.png{{/if}}" alt="{{FullName}}">
                        </div>
                        <div class="post-time">
                            <span class="post-time-item">
                                <i class="fas fa-eye"></i> {{Views}}
                            </span>
                            <span class="post-time-item">
                                {{#format_date_time TimePublish}}{{/format_date_time}}
                            </span>
                            <span class="post-time-item">
                                {{SubCategoryName}}
                            </span>
                        </div>
                    </a>
                </div>
                {{/each}}
                {{else}}
                Không có bài viết
                {{/if}}
            </div>
        </div>
</div>
<!-- End Scene -->